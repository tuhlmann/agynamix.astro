---
// Initializes cookie consent with the correct language based on the page's language

interface Props {
  lang: string;
}

const { lang = "en" } = Astro.props;
---

<script define:vars={{ lang }}>
  if (typeof window !== "undefined") {
    window.addEventListener("load", () => {
      const cc = window.CookieConsent;

      if (cc && typeof cc.setLanguage === "function") {
        cc.setLanguage(lang);
      }
    });
  }
</script>
