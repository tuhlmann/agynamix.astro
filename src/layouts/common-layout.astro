---
import Header from "../components/Header.tsx";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import "../styles/fonts.css";
import { LayoutProps } from "~/types/layout-types";

const { activePage, title = "AGYNAMIX Torsten Uhlmann", lang = "en" } = Astro.props as LayoutProps;
---

<html class="h-full" lang={lang}>
  <head>
    <meta title={title} />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicons/favicon.ico" />
    <title>{title}</title>
  </head>
  <body class="h-full bg-primary-bg font-sans text-base leading-6">
    <main class="min-h-full flex flex-col h-screen justify-between">
      <Header client:visible activePage={activePage} lang={lang} />
      <slot />
      <!-- Content goes here -->
      <Footer />
    </main>
  </body>
  <link rel="stylesheet" type="text/css" href="/lib/cookieconsent.min.css" />
  <script is:inline src="/lib/cookieconsent.min.js"></script>
  <script is:inline src="/lib/cookieconsent_init.js"></script>
</html>
