---
import Header from "../components/Header.tsx";
import Footer from "../components/Footer.astro";
import CookieConsentInit from "../components/CookieConsentInit.astro";
import "../styles/global.css";
import "../styles/fonts.css";
import { LayoutProps } from "~/types/layout-types";
import { localeAlternates } from "../i18n/routes";

const { activePage, title = "AGYNAMIX Torsten Uhlmann", lang = "en" } = Astro.props as LayoutProps;

const site = Astro.site?.toString().replace(/\/$/, "") ?? "";
const pathname = Astro.url.pathname;
const canonicalHref = site ? `${site}${pathname}` : Astro.url.toString();
const alternates = localeAlternates(pathname);
---

<html class="h-full" lang={lang}>
  <head>
    <meta title={title} />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicons/favicon.ico" />
    <title>{title}</title>
    <link rel="canonical" href={canonicalHref} />
    {alternates && (
      <>
        <link rel="alternate" hreflang="en" href={`${site}${alternates.enPath}`} />
        <link rel="alternate" hreflang="de" href={`${site}${alternates.dePath}`} />
        <link rel="alternate" hreflang="x-default" href={`${site}${alternates.enPath}`} />
      </>
    )}

    <CookieConsentInit lang={lang} />
  </head>
  <body class="h-full bg-primary-bg font-sans text-base leading-6">
    <main class="min-h-full flex flex-col h-screen justify-between">
      <Header client:visible activePage={activePage} lang={lang} />
      <slot />
      <!-- Content goes here -->
      <Footer lang={lang} />
    </main>
  </body>
</html>
