---
import RoundLink from "../components/RoundLink.astro";
import { LandingInteractiveImage } from "../components/LandingInteractiveImage.tsx";
import resumeImg from "../images/resume.svg";
import skillsImg from "../images/skills.svg";
import clientImg from "../images/client.svg";
import PageLayout from "../layouts/page-layout.astro";
import { TextLink } from "../blocks/TextLink.tsx";
import LightbulbIcon from "../blocks/LightbulbIcon.astro";
import { config } from "../data/config";
import LocaleRedirect from "../components/LocaleRedirect.astro";
---

<PageLayout activePage="index" title="Welcome to AGYNAMIX!">
  <LocaleRedirect />
  <div
    class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col justify-around"
  >
    <div class="-mt-12 mb-10 rounded-lg border border-gray-200 bg-white px-6 py-5 sm:px-8">
      <div class="flex items-start gap-3">
        <div class="mt-1">
          <LightbulbIcon class="w-7 h-7 text-gray-500" />
        </div>
        <p class="text-base sm:text-lg leading-relaxed text-gray-900">
          I build <TextLink to="https://invoicer.agynamix.de" target="_blank" rel="noopener noreferrer"><strong>AGYNAMIX Invoicer</strong></TextLink> â€” a desktop application for creating and sending invoices.
          <span class="ml-1">
            <TextLink to="https://invoicer.agynamix.de" target="_blank" rel="noopener noreferrer">
              Try it free at invoicer.agynamix.de
            </TextLink>
            .
          </span>
        </p>
      </div>
    </div>
    <div class="flex justify-between flex-col sm:flex-row">
      <LandingInteractiveImage client:visible lang="en" />
      <div class="max-w-4xl mx-auto sm:px-6 lg:px-8">
        <!-- Replace with your content -->
        <div class="px-4 py-8 sm:px-0">
          <div>
            <h1 class="h1 my-2">Hello, my name is Torsten.</h1>
            <p class="landing-p">
              I'm a Full Stack software developer working with Rust, Scala, Kotlin, Java and Typescript,
              <TextLink to="/resume#skills">amongst others</TextLink>.
            </p>
            <p class="landing-p">
              I love developing <TextLink to="/products">new things</TextLink> and
              working with
              <TextLink to="/clients">great teams</TextLink>; I taught <TextLink
                to="/resume#training">courses</TextLink
              >, spoke at <TextLink to="/resume#training">conferences</TextLink>
              and wrote a
              <TextLink to="/resume#2012-05-01-packt-publishing">book</TextLink
              >.
            </p>
            <h2 class="h2">More about me:</h2>
            <div
              class="flex justify-between flex-col sm:flex-row sm:items-center lg:pr-8 lg:pl-8"
            >
              <RoundLink
                background={`linear-gradient(45deg, rgba(219, 87, 86, 0.75), rgba(219, 87, 86, 1)), url(${resumeImg.src})`}
                link="/resume"
                text="My Resume"
              />
              <RoundLink
                background={`linear-gradient(45deg, rgba(6, 19, 36, 0.75), rgba(6, 19, 36, 1)), url(${skillsImg.src})`}
                link="/consulting"
                text="Consulting"
              />
              <RoundLink
                background={`linear-gradient(45deg, rgba(73, 115, 140, 0.75), rgba(73, 115, 140, 1)), url(${clientImg.src})`}
                link="/clients"
                text="My Clients"
              />
            </div>
            <div class="my-2">
              <p class="landing-p">
                If you're looking for an accomplished software engineer you've
                come to the right place,
                <TextLink to={`mailto:${config.email}`}
                  >let's get in touch!</TextLink
                >
              </p>
            </div>
          </div>
        </div>
        <!-- /End replace -->
      </div>
    </div>
  </div>
</PageLayout>
